<% if notice %>
  <%= notice %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/shownew', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  
      <table class="table">
       <tbody>
         <tr>
           <td>
             <%= image_tag @book.user.get_profile_image(100,100) %>
             <%= link_to user_path(@book.user.id) do %>
             <%= @book.user.name %>
             <% end %>
           </td>
           <td>
             <%= link_to book_path(@book.id) do%>
               <%= @book.title %>
             <% end %>
           </td>
           <td>
               <%= @book.body %>
           </td>
           
           <td>
             <% if @book.user == current_user %>
              <button type="button" class="btn btn-sm btn-success">
               <%= link_to "Edit", edit_book_path(@book.id), class: 'text-light' %>
              </button>
             <% end %>
           </td>
           <td>
             <% if @book.user == current_user %>
               <button type="button" class="btn btn-sm btn-danger">
                 <%= link_to "Destroy", book_path(@book), method: :delete,"data-confirm" => "Are you sure?", class: 'text-light' %>
               </button>
             <% end %>
           </td>
         </tr>
       </tbody>
     </table>
   </div>
  </div>
</div>
  