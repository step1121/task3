<h2>User info</h2>
<p><%= image_tag user.get_profile_image(100,100) %></p>
<table class="table">
  <tb>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tb>
</table>

<% if user == current_user %>
 <div class="row">
   <button type="button" class="btn btn-outline-secondary  btn-block">
   <%= link_to edit_user_path(user.id), class: 'text-muted' do %>
   <i class="fas fa-user-edit"></i>
   <% end %>
   </button>
 </div>
<% end %>

<h2 class="mt-3">New Book</h1>

  <%= form_with model: user.books, url: books_path, mathod: 'post' do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="form-group"> 
      <label for="Opinion">Title</label>
      <%= f.text_area :body %>
    </div>
    <button class="btn btn-success" type="submit">
     Create Book
    </button>
  <% end %>